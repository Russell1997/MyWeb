import requests
from bs4 import BeautifulSoup
from selenium import webdriver
import os, time, sys
import re
def get_text(url):
    res = requests.get(url)
    res.encoding = "utf-8"
    soup = BeautifulSoup(res.text, "html.parser")
    title = soup.title.text.strip('\n').lstrip(' ')
    editor = soup.a.text.strip('\n')
    editor = str(editor).replace('                        ','')
    #以上已经完成对推送题目title和作者editor的爬取
    context = soup.select('.rich_media_content')
    context = re.findall('>(.+?)</p>',str(context))
    for j in context:
        if '<img ' in j:
            context.remove(j)
    for k in context:
        if '<br/>' in k:
            context.remove(k)
    for i in context:
        print(i)
    return


if __name__ == "__main__":
    # url = 'https://mp.weixin.qq.com/s/wNmK6L7nEWRSJKHWiDUrtQ'
    url = input()
    get_text(url)
    sys.exit()
